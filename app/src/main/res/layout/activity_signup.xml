<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/ivSignupLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/logo">
    </ImageView>

    <TextView
        android:id="@+id/tvSignupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARK SMART"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/ivSignupLogo"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:id="@+id/tvSignupSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find your own spot"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/tvSignupTitle"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:id="@+id/tvSignupPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvSignupSlogan"
        android:layout_centerHorizontal="true">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/tilSignupUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:startIconDrawable="@drawable/user"
        android:layout_below="@+id/tvSignupPurpose"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Contact number"
        android:id="@+id/tilSignupPhone"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/phone"
        android:layout_below="@+id/tilSignupUser"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Vehicle number"
        android:id="@+id/tilSignupVehicle"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/ic_baseline_directions_car_24"
        android:layout_below="@+id/tilSignupPhone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/tilSignupPwd"
        app:passwordToggleEnabled="true"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/pwdlogo"
        android:layout_below="@+id/tilSignupVehicle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Confirm password"
        android:id="@+id/tilSignupRePwd"
        app:passwordToggleEnabled="true"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/pwdlogo"
        android:layout_below="@+id/tilSignupPwd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tilSignupRePwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Create Account">
    </Button>

</RelativeLayout>