<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SignupActivity">

<ImageView
    android:id="@+id/ivSignupLogo"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="22dp"
    android:src="@drawable/logo">
</ImageView>

<TextView
    android:id="@+id/tvSignupTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PARK SMART"
    android:textSize="25dp"
    android:textStyle="bold"
    android:layout_below="@+id/ivSignupLogo"
    android:layout_centerHorizontal="true">
</TextView>

<TextView
    android:id="@+id/tvSignupSlogan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find your own spot"
    android:textSize="15dp"
    android:textStyle="bold|italic"
    android:layout_below="@+id/tvSignupTitle"
    android:layout_centerHorizontal="true">
</TextView>

<TextView
    android:id="@+id/tvSignupPurpose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sign up as Admin"
    android:textSize="25dp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/tvSignupSlogan"
    android:layout_centerHorizontal="true">
</TextView>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:hint="Admin name"
    android:id="@+id/tilSignupAdmin"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    app:startIconDrawable="@drawable/user"
    android:layout_below="@+id/tvSignupPurpose"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:hint="Contact info"
    android:id="@+id/tilSignupPhoneAd"
    android:layout_centerHorizontal="true"
    app:startIconDrawable="@drawable/phone"
    android:layout_below="@+id/tilSignupAdmin"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:hint="Location"
    android:id="@+id/tilSignupLocationAd"
    android:layout_centerHorizontal="true"
    app:startIconDrawable="@drawable/location"
    android:layout_below="@+id/tilSignupPhoneAd"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:hint="Admin ID"
    android:id="@+id/tilSignupAdminID"
    android:layout_centerHorizontal="true"
    app:startIconDrawable="@drawable/admin_id"
    android:layout_below="@+id/tilSignupLocationAd"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>


<com.google.android.material.textfield.TextInputLayout
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:hint="Parking Fee"
    android:id="@+id/tilSignupParkingFee"
    android:layout_centerHorizontal="true"
    app:startIconDrawable="@drawable/money"
    android:layout_below="@+id/tilSignupAdminID"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tilSignupParkingFee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Create Admin">
    </Button>

</RelativeLayout>